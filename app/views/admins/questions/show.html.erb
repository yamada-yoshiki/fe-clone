<div class="w-full">
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">問題名</label>
    <%= link_to @question.title, edit_admins_question_path(@question), class: 'w-full text-decoration-none text-body border rounded d-flex align-items-center fs-4 px-3', style: "height: 2em; white-space: pre-wrap;", remote: true, data: { turbo_frame: 'question_modal' } %>
  </div>
  <%= turbo_frame_tag "question_modal" %>
  <div class="mb-3 d-flex justify-between">
    <h4>問題内容</h4>
    <div>
      <%= link_to '問題文',
                  new_admins_question_content_path,
                  class: "btn btn-primary",
                  remote: true,
                  data: { turbo_frame: 'sentence_modal' }
      %>
      <%= render 'admins/question_contents/image_modal' %>
    </div>

  </div>

  <div class="flex-col">
    <%# 登録リンククリック時に、cats#newの新規登録フォーム部分をここに置換する %>
    <%= turbo_frame_tag "sentence_modal" %>
    <div id="question_contents">
      <%= render @question_contents %>
    </div>
  </div>
</div>
