<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
  <div class="block text-gray-700 text-sm font-bold mb-2">Forgot your password?</div class="block text-gray-700 text-sm font-bold mb-2">
  <div class="text-red-500">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="field">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline my-4" %>
  </div>
  <%= link_to "Sign In", new_admin_session_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
  <%= link_to "Sign Up", new_admin_registration_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
<% end %>
